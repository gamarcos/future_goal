<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.gabrielmarcos.core.test" >

    <uses-sdk
        android:minSdkVersion="24"
        android:targetSdkVersion="29" />

    <instrumentation
        android:name="android.test.InstrumentationTestRunner"
        android:functionalTest="false"
        android:handleProfiling="false"
        android:label="Tests for br.com.gabrielmarcos.core"
        android:targetPackage="br.com.gabrielmarcos.core" />

    <application
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:extractNativeLibs="false"
        android:supportsRtl="true" >
        <uses-library android:name="android.test.runner" />

        <service
            android:name="androidx.room.MultiInstanceInvalidationService"
            android:directBootAware="true"
            android:exported="false" />

        <provider
            android:name="androidx.lifecycle.ProcessLifecycleOwnerInitializer"
            android:authorities="br.com.gabrielmarcos.core.test.lifecycle-process"
            android:exported="false"
            android:multiprocess="true" />
    </application>

</manifest>