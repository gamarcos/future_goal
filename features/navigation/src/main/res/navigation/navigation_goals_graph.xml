<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation_goals"
    app:startDestination="@id/pokedex_main">

    <fragment
        android:id="@+id/goals_home"
        android:name="br.com.gabrielmarcos.crud_goals.home.ui.HomeGoalsFragment"
        android:label="Home">

        <action
            android:id="@+id/action_home_to_crud_goal"
            app:destination="@+id/goals_insert"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            app:popUpTo="@+id/characters_list_fragment" />

    </fragment>

    <fragment
        android:id="@+id/goals_insert"
        android:name="br.com.gabrielmarcos.crud_goals.crud.ui.CrudGoalsFragment"
        android:label="Insert">
        <argument
            android:name="goal_id"
            app:argType="long" />
    </fragment>

    <fragment
        android:id="@+id/pokedex_main"
        android:name="br.com.gabrielmarcos.pokedex.PokedexFragment"
        android:label="Pokedex" />
</navigation>